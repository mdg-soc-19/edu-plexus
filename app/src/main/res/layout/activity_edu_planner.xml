<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EduPlanner">
      <CalendarView
          android:id="@+id/calendarView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="25dp"
          android:layout_marginLeft="25dp"
          android:layout_marginTop="5dp" />

      <Button
          android:id="@+id/buttonSave"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="90dp"
          android:layout_marginLeft="90dp"
          android:layout_marginTop="320dp"
          android:text="@string/save" />
      <Button
          android:id="@+id/button111111"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="180dp"
          android:layout_marginLeft="180dp"
          android:layout_marginTop="320dp"
          android:text="Load TimeTable" />
      <EditText
          android:id="@+id/EventName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="100dp"
          android:layout_marginLeft="100dp"
          android:layout_marginTop="380dp"
          android:autofillHints="Enter The Event Name"
          android:ems="10"
          android:hint="Enter the Event Name "
          android:inputType="textPersonName"
          android:text="" />

      <EditText
          android:id="@+id/duration"
          android:layout_width="107dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="55dp"
          android:layout_marginLeft="55dp"
          android:layout_marginTop="430dp"
          android:ems="10"
          android:hint="Duration"
          android:inputType="number" />
      <EditText
          android:id="@+id/timePeriod"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="230dp"
          android:layout_marginLeft="200dp"
          android:layout_marginRight="50dp"
          android:layout_marginEnd="50dp"
          android:layout_marginTop="430dp"
          android:ems="10"
          android:hint="Enter the Time"
          android:inputType="time"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="160dp"
          android:layout_marginLeft="160dp"
          android:layout_marginTop="440dp"
          android:textSize="24dp"
          android:text="h"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="135dp"
          android:layout_marginLeft="135dp"
          android:layout_marginTop="480dp"
          android:id="@+id/DateToday"
          android:textSize="24dp"
          android:text="Today's Date"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="155dp"
          android:layout_below="@+id/DateToday"
          android:layout_marginTop="20dp"
          android:id="@+id/Study_Info"
          android:textSize="20dp"
          android:text="Study Info"
          />

</RelativeLayout>